	<build>
		<finalName>darwino.angular</finalName>
		<plugins>
			<!-- http://tomcat.apache.org/maven-plugin-trunk/tomcat7-maven-plugin/usage.html -->
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
