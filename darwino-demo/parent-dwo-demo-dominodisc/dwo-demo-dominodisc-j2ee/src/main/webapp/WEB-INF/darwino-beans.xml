    <bean type="darwino/httpconstraint" name="auth" class="${c}" alias="demo,local,default">
        <list name="constraints">
            <bean class='${cc}'>
                <property name='urlPattern'>/mobile/auth/*</property>
            </bean>    
            <bean class='${cc}'>
                <property name='urlPattern'>/mobileold/auth/*</property>
            </bean>    
            <bean class='${cc}'>
                <property name='urlPattern'>/$darwino-social/*</property>
            </bean>    
            <bean class='${cc}'>
                <property name='urlPattern'>/$darwino-jstore/*</property>
            </bean>    
		</list>
    </bean>
     
</beans>
